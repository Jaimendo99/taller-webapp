@model IEnumerable<taller_mvc.Models.Client>

@{
    ViewData["Title"] = "Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<script src="~/js/script.js"></script>
<link rel="stylesheet" href="~/css/site.css" />


<div class="card">
    <div class="card-header">
		<h1 class="name-client">Clients</h1>
		<button class="btn button-client" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
			<span class="material-symbols-outlined">
				add
			</span>
		</button>
		@ViewBag.Accion
    </div>
    <div class="card-body">

        
        <table class="table">
            <thead>
                <tr>
                    
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
				{
					<tr>
						
						<td>@item.Name</td>
						<td>@item.Email</td>
						<td>@item.PhoneNumber</td>
						<td>
							<a class="btn" id="details" asp-action="ClientDetails" asp-controller="Home" asp-route-id="@item.Id" style="color=#31415b">
                                <span class="material-symbols-outlined">
                                    info
                                </span>

                            </a>

						</td>
					</tr>
				}
            </tbody>
        </table>
    </div>
</div>


<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
	<div class="offcanvas-header">
		<h5 class="h4-table" id="staticBackdropLabel">Add Client</h5>
		<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
	</div>
	<div class="offcanvas-body">
		<div>
			<div class="form-floating mb-3">
				<input type="text" class="form-control" id="inName" placeholder="name example">
				<label for="floatingInput">Full Name</label>
			</div>

			<div class="form-floating mb-3">
				<input type="email" class="form-control" id="inEmail" placeholder="name@example.com">
				<label for="floatingInput">Email address</label>
			</div>

			<div class="form-floating mb-3">
				<input type="text" class="form-control" id="inPhone" placeholder="+593xxxxxxxxx">
				<label for="floatingInput">Phone Number</label>
			</div>

			<div class="input-group">
				<input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" />
			</div>

		</div>
		<br />
		<a class="btn button-client" id="sumbmitBtn" onClick="getImageData()">
			<span class="material-symbols-outlined">
				save
			</span>
		</a>
	</div>
</div>