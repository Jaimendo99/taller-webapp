@model IEnumerable<taller_mvc.Models.Client>

@{
    ViewData["Title"] = "Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<script>
    
    function changeTitle(id) {
        if (id == 0) {
            document.getElementById("staticBackdropLabel").innerHTML = "New Client";
	    }
        else {
            document.getElementById("staticBackdropLabel").innerHTML = `Edit Client `+id;
        }
    }

    var id = null;
    function setId(thisId){
        id = thisId;
        changeTitle(id);
    }  

    function getFormData() {
        data = {
            Id:id,
            IdNum: document.getElementById("inId").value,
			Name: document.getElementById("inName").value,
			Email: document.getElementById("inEmail").value,
			Phone: document.getElementById("inPhone").value
		};
        return data;
	}

    function sendClientData(){
		var data = getFormData();
        if (data.Id !=0) {
            var url = "/Home/UpdateClient";
            $.ajax({
                type: "POST",
                url: url,
                data: data,
                success: function (data) {
                    location.reload();
                },
                error: function (data) {
                    alert("Error: Client not edited");
                }
            });
        }
        else{
            var url = "/Home/CreateClient";
            $.ajax({
				type: "POST",
				url: url,
				data: data,
				success: function (data) {
					location.reload();
				},
				error: function (data) {
					alert("Error: Client not added");
				}
			});
        }
        }
</script>


<div class="card">
    <div class="card-header">
        @ViewBag.Accion
    </div>
    <div class="card-body">
        <button onClick="setId(0)" class="btn btn-success" type="button" data-bs-toggle="offcanvas" data-bs-target="#editClient" aria-controls="editClient">
            <span class="material-symbols-outlined">
                add
            </span>
		</button>  
        <hr />
        
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
				{
					<tr>
						<td>@item.IdNum</td>
						<td>@item.Name</td>
						<td>@item.Email</td>
						<td>@item.Phone</td>
						<td>
                            <button id="@item.Id"  onClick="setId(this.id)" class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#editClient" aria-controls="editClient">
                                <span class="material-symbols-outlined">
                                    edit
                                </span>
                            </button>

                            <a class="btn btn-danger" asp-action="DeleteClient" asp-controller="Home" asp-route-id="@item.Id">
                                <span class="material-symbols-outlined">
                                    delete
                                </span>
                            </a>
						</td>
					</tr>
				}
            </tbody>
        </table>
    </div>
</div>


<div class="offcanvas offcanvas-start" data-bs-backdrop="static" tabindex="-1" id="editClient" aria-labelledby="staticBackdropLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="staticBackdropLabel">Edit Client</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="inName" placeholder="name example">
                <label for="floatingInput">Full Name</label>
            </div>

            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="inId" placeholder="11331222422">
              <label for="floatingInput">Identification</label>
            </div>

            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="inEmail" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="inPhone" placeholder="+593xxxxxxxxx">
                <label for="floatingInput">Phone Number</label>
            </div>
            
        </div>
        <a class="btn btn-rimary" id="sumbmitBtn" onClick="sendClientData()" >Save Changes</a>
    </div>
</div>

